<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.musicstructureapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/play_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ReleaseActivity"
            android:label="@string/new_release" />
        <activity
            android:name=".RecommendActivity"
            android:label="@string/recommend" />
        <activity
            android:name=".PopularActivity"
            android:label="@string/popular" />
        <activity
            android:name=".GreatestActivity"
            android:label="@string/greatest" />
    </application>

</manifest>